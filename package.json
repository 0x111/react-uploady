{
  "name": "react-uploady-root",
  "version": "1.0.0",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna exec --stream -- FORCE_COLOR=1 NODE_ENV=production yarn build;",
    "clean": "lerna exec --stream -- rimraf lib",
    "release": "yarn bootstrap; yarn clean; yarn build; yarn flow:copy",
    "ssb": "start-storybook -p 9111",
    "bsb": "NODE_ENV=development build-storybook -c .storybook -o .sb-static",
    "start": "yarn ssb",
    "jest": "NODE_ENV=test jest",
    "jest:cov": "yarn jest --coverage",
    "jest:ci": "yarn jest:cov --ci --runInBand --reporters='default' --reporters='jest-junit' ",
    "flow:mono": "flow-mono create-symlinks ./.flowconfig",
    "flow": "yarn flow:mono; flow --show-all-errors",
    "flow:copy": "lerna exec --stream -- yarn flow:copy",
    "lint": "eslint ./packages",
    "test": "yarn flow && yarn lint --quiet && yarn jest:cov",
    "test:ci": "yarn flow && yarn lint --quiet && yarn jest:ci",
    "server": "cd server; PORT=4000 node index.js"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/ui/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yoavniran/react-uploady"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.7.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-storysource": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "chalk": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-import-resolver-webpack": "^0.12.0",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "flow-bin": "^0.119.1",
    "flow-copy-source": "^2.0.9",
    "flow-mono-cli": "^1.5.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^10.0.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.20.2",
    "lodash": "^4.17.15",
    "rc-progress": "^2.5.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "storybook-readme": "^5.0.8",
    "storybook-styled-components": "^1.1.4",
    "styled-components": "^4.4.1",
    "webpack": "^4.41.2"
  },
  "optionalDependencies": {
    "fsevents": "^2.1.2"
  }
}
